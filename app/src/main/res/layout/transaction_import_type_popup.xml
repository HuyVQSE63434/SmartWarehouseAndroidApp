<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/dp328"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_weight="8"
            android:background="@color/color_white"
            android:src="@mipmap/ic_ft"
            android:tint="@color/greenMatcha" />

        <Button
            android:id="@+id/btn_import_from_store"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/my_button"
            android:text="Nhập hàng từ cửa hàng"
            android:textColor="@color/greenMatcha"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_weight="8"
            android:src="@mipmap/ic_truck"
            android:tint="@color/greenMatcha" />

        <Button
            android:id="@+id/btn_import_from_other_supplier"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/my_button"
            android:text="Nhập hàng từ nhà cung"
            android:textColor="@color/greenMatcha"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        >

        <ImageView
            android:background="@color/color_white"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:src="@mipmap/ic_check"
            android:tint="@color/greenMatcha" />
        <Button
            android:layout_weight="2"
            android:id="@+id/btn_import_after_sale"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_button"
            android:elevation="@dimen/dp10"
            android:text="Nhập hàng sau khi bán"
            android:textColor="@color/greenMatcha"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>