<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp328"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:src="@mipmap/ic_receipt"
            android:tint="@color/greenMatcha"
            android:background="@color/color_white"/>

        <Button
            android:id="@+id/btn_import"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/my_button"
            android:text="Nhập hàng"
            android:textColor="@color/greenMatcha"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        >
        <ImageView
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:src="@mipmap/ic_issue"
            android:tint="@color/greenMatcha"
            android:layout_weight="8"/>
        <Button
            android:layout_weight="2"
            android:id="@+id/btn_export"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_button"
            android:text="Xuất hàng"
            android:textColor="@color/greenMatcha"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        >

        <ImageView
            android:background="@color/color_white"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:src="@mipmap/ic_check"
            android:tint="@color/greenMatcha" />
    <Button
        android:layout_weight="2"
        android:id="@+id/btn_check_store"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/my_button"
        android:elevation="@dimen/dp10"
        android:text="Kiểm kho"
        android:textColor="@color/greenMatcha"
        android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>